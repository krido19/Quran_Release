<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header: Location and Date -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magelang"
            android:textColor="#64748B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="30 November 2025"
            android:textColor="#94A3B8"
            android:textSize="12sp" />
    </RelativeLayout>

    <!-- Next Prayer Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu berikutnya, "
            android:textColor="#0F172A"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/widget_next_prayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dzuhur 11:30"
            android:textColor="#0F172A"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Prayer Times List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <!-- Subuh -->
        <LinearLayout
            android:id="@+id/layout_subuh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subuh"
                android:textColor="#64748B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_subuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:49"
                android:textColor="#334155"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Dzuhur (Highlighted Example) -->
        <LinearLayout
            android:id="@+id/layout_dzuhur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/prayer_highlight"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dzuhur"
                android:textColor="#0F172A"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_dzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30"
                android:textColor="#0369A1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Ashar -->
        <LinearLayout
            android:id="@+id/layout_ashar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashar"
                android:textColor="#64748B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_ashar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:54"
                android:textColor="#334155"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Maghrib -->
        <LinearLayout
            android:id="@+id/layout_maghrib"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maghrib"
                android:textColor="#64748B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:45"
                android:textColor="#334155"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Isya -->
        <LinearLayout
            android:id="@+id/layout_isya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isya"
                android:textColor="#64748B"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_isya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:01"
                android:textColor="#334155"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
